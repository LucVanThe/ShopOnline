@model ShopOnline.ViewModel.BlogDetailViewModel
@{
    ViewData["Title"] = "Blogs detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Blog Details Hero Begin -->
<section class="blog-details-hero set-bg " data-setbg="@Url.Content("~/content/shop/img/blog/details/details-hero.jpg")" style="background-image: url('@Url.Content("~/content/shop/img/blog/details/details-hero.jpg")')" >
   
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog__details__hero__text">
                    <h2>The Moment You Need To Remove Garlic From The Menu</h2>
					<ul>
						
                        <li>By Michael Scofield</li>
                        <li><span id="current-time"></span></li>
                        <li>8 Comments</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Hero End -->
<!-- Blog Details Section Begin -->
<section class="blog-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5 order-md-1 order-2">
                <div class="blog__sidebar">
                    
                    <div class="blog__sidebar__item">
                        <h4>Tin tức gần đây</h4>
                        <div class="blog__sidebar__recent">
                            @await Component.InvokeAsync("RecentNews")
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="col-lg-8 col-md-7 order-md-1 order-1">
                <div class="blog__details__text">
                    <img src="/Images/Pages/@Model.Thumb" alt="@Model.Thumb" class="product-image">
					<h2>@Model.PageName</h2>
                    <h3>@Model.Title</h3>
                    <h3>@Model.CreatedDate</h3>
                    <p>
                        @Html.Raw(Model.Contents)
                    </p>
                    
                </div>
                <div class="blog__details__content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="blog__details__author">
                                <div class="blog__details__author__pic">
                                    <img src="/Content/Shop/img/blog/details/details-author.jpg" alt="">
                                </div>
                                <div class="blog__details__author__text">
                                    <h6>Michael Scofield</h6>
                                    <span>Admin</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="blog__details__widget">
                                <ul>                                   
                                    <li><span>Tags:</span> All, Trending, Cooking, Healthy Food, Life Style</li>
                                </ul>
                                <div class="blog__details__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-google-plus"></i></a>
                                    <a href="#"><i class="fa fa-linkedin"></i></a>
                                    <a href="#"><i class="fa fa-envelope"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->
<!-- Related Blog Section Begin -->
<section class="related-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related-blog-title">
                    <h2>Bài viết bạn có thể thích</h2>
                </div>
            </div>
        </div>
        <div class="row">
			@await Component.InvokeAsync("TinTucThem")
        </div>
    </div>
</section>
<!-- Related Blog Section End -->

<script>
    function ThoiGianHienTai(){
        const now=new Date();
        const formatted=now.toLocaleDateString();
        document.getElementById("current-time").textContent=formatted;
    }
    ThoiGianHienTai();
</script>
<style>
    .product-image {
        width: 100%;
        height: auto;
    }
</style>