@model ShopOnline.ViewModel.AccountVM
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg rounded-3">
                <div class="card-body">
                    <h3 class="text-center mb-4 text-primary">Đăng ký tài khoản</h3>

                    <form asp-action="RegisterAccount" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold">Họ tên</label>
                            <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-semibold">Số điện thoại</label>
                            <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">Mật khẩu</label>
                            <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" type="password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RePassword" class="form-label fw-semibold btnsucces">Xác nhận mật khẩu</label>
                            <input asp-for="RePassword" class="form-control" placeholder="Nhập lại mật khẩu" type="password" />
                            <span asp-validation-for="RePassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
       
    }
}
