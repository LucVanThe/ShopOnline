                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
                <li class="nav-item">
                   
                        <a role="button" class="nav-link"  data-slide="true" asp-action="Logout" asp-controller="Access" asp-area=""><i class="fa fa-user"></i> Logout</a>
                 
